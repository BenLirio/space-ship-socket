{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "es2022",
    "target": "es2022",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node10",
    "allowJs": false
  },
  "include": ["src", "test"],
  "exclude": ["dist"]
}
