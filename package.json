{
  "name": "space-ship-socket",
  "version": "0.1.0",
  "description": "TypeScript WebSocket server",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec node --loader ts-node/esm src/server.ts",
    "build": "tsc --build",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "node --loader ts-node/esm test/integration/basic.test.ts",
    "smoke": "node scripts/smoke-ws.js"
  },
  "keywords": [
    "websocket",
    "typescript",
    "ws"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
